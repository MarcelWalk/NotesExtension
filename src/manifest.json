{
  "name": "Notes",
  "description": "Save maked text easily as note for later use",
  "version": "0.1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "./worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "./images/notes-icon_16.png",
      "32": "./images/notes-icon_32.png",
      "48": "./images/notes-icon_48.png",
      "128": "./images/notes-icon_128.png"
    }
  },
  "options_page": "./html/index.html",
  "permissions": ["storage", "contextMenus", "tabs", "notifications"],
  "icons": {
    "16": "./images/notes-icon_16.png",
    "32": "./images/notes-icon_32.png",
    "48": "./images/notes-icon_48.png",
    "128": "./images/notes-icon_128.png"
  }
}
